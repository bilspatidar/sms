<div class="row">
<div class="col-md-4"></div>
<div class="col-md-4">

<% if @cource.errors.any? %>

  <ul> 
  <% @cource.errors.full_messages.each do |error_msg| %>

  <li><%= error_msg %></li>
  <% end %>
  </ul>
  <% else %>
 
  <% end %>

<h1>Edit cource</h1>

<form action="/cource" method="POST">
<input type="hidden" name="id" value="<%= @cource.id %>">
  <div class="form-group">
    <label for="email">Title:</label>
    <input type="text" class="form-control" name="title" value="<%= @cource.title %>">
  </div>

  <div class="form-group">
    <label for="email">Duration:</label>
    <input type="text" class="form-control" name="duration" value="<%= @cource.duration %>">
  </div>

  <div class="form-group">
    <label for="email">Fee:</label>
    
    <input type="text" class="form-control" name="fee" value="<%= @cource.fee %>">
  </div>

  
 
  <button type="submit" class="btn btn-info">Submit</button>
</form>

</div>
</div>